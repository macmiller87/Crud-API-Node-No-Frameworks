generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_APP")
}

model Users {
  user_id   String       @id
  username  String
  email     String       @unique
  password  String
  createdAt DateTime     @default(now())
  UserToken UserTokens[]
}

model UserTokens {
  id        String   @id @default(uuid())
  user_id   String
  createdAt DateTime @default(now())
  user      Users    @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
}
